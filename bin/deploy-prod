#!/bin/bash

set -e
aws ecr-public get-login-password --region us-east-1 | docker login --username AWS --password-stdin public.ecr.aws/t1q6b4h2
docker build -f prod.Dockerfile -t universal-application-tool .
docker tag universal-application-tool:latest public.ecr.aws/t1q6b4h2/universal-application-tool:latest
docker push public.ecr.aws/t1q6b4h2/universal-application-tool:latest

TIMESTAMP=$(date +%s)
DBUSERNAME=uat
DBPASSWORD=$(openssl rand -base64 32)
SECREY_KEY=$(openssl rand -base64 32)

aws s3 sync ./infra s3://seattle-uat-cftmpl/${TIMESTAMP}
aws cloudformation create-stack --stack-name uat --template-url s3://seattle-uat-cftmpl/stack.json --parameters "[{\"ParameterKey\": \"DBUsername\", \"ParameterValue\": \"$DBUSERNAME\"}, {\"ParameterKey\": \"DBPassword\", \"ParameterValue\": \"$DBPASSWORD\"}, {\"ParameterKey\": \"SecretKey\", \"ParameterValue\": \"$SECRET_KEY\"}, {\"ParameterKey\": \"Timestamp\", \"ParameterValue\": $TIMESTAMP}]"
